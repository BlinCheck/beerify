<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemPhoto"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name of item"
        android:textColor="#120101"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/itemPhoto"
        app:layout_constraintTop_toTopOf="@+id/itemPhoto" />

    <TextView
        android:id="@+id/commentDescription"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/itemPhoto"
        app:layout_constraintStart_toStartOf="@+id/commentTitle" />

    <TextView
        android:id="@+id/itemRating"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_marginEnd="16dp"
        android:text="5.0"
        android:textColor="#030000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemPhoto"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>