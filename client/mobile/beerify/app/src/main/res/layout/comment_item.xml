<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Name of item"
        android:textColor="#120101"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentDescription"
        android:layout_width="318dp"
        android:layout_height="33dp"
        android:ellipsize="end"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/commentTitle"
        app:layout_constraintTop_toBottomOf="@+id/commentTitle" />

    <TextView
        android:id="@+id/commentRating"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#030000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>